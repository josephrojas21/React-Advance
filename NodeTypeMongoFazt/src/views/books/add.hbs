<div class="col-md-4 mx-auto">
    <div class="card card-body">
        <form action="/books/add" method="POST">
            <div class="form-group">
                <input type="text" name="title" id="" class="form-control" placeholder="Book title" autofocus required>
            </div>
            <div class="form-group">
                <input type="text" name="author" id="" class="form-control" placeholder="Author book" required>
            </div>
            <div class="form-group">
                <input type="text" name="isbn" placeholder="ISBN" pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])" class="form-control">
            </div>
            <button class="btn btn-primary btn-block">
                save
            </button>
        </form>
    </div>
</div>